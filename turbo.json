{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ],
            "env": [
                "DATABASE_URL",
                "REDIS_URL",
                "JWT_SECRET",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_NEON_AUTH_URL",
                "NEON_AUTH_BASE_URL",
                "NEON_AUTH_JWKS_URL",
                "GEMINI_API_KEY",
                "NODE_ENV",
                "PORT",
                "CORS_ORIGIN",
                "JWT_EXPIRES_IN",
                "ADMIN_EMAIL"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "clean": {
            "cache": false
        }
    }
}