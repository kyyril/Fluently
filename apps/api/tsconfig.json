{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "../../node_modules/@types",
            "node_modules/@types"
        ],
        "types": [
            "node",
            "express",
            "cors",
            "compression",
            "bcryptjs"
        ]
    },
    "include": [
        "src/**/*",
        "api/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}