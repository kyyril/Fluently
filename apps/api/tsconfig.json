{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "dom",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "rootDir": ".",
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "api/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}